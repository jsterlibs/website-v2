{
  "type": "BaseLayout",
  "props": {
    "content": {
      "type": "div",
      "class": "p-4 mx-auto max-w-5xl prose lg:prose-xl",
      "children": [
        {
          "type": "H1",
          "bindToProps": {
            "children": {
              "utility": "get",
              "parameters": ["context", "match.title"]
            }
          }
        },
        {
          "children": {
            "utility": "markdown",
            "parameters": [{
              "utility": "get",
              "parameters": ["context", "match.body"]
            }]
          }
        }
      ]
    }
  }
}
