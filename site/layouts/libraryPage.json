{
  "type": "BaseLayout",
  "props": {
    "content": {
      "type": "div",
      "class": "p-4 mx-auto max-w-3xl flex flex-row gap-2",
      "children": [
        {
          "type": "div",
          "class": "prose lg:prose-xl",
          "children": [
            {
              "type": "H1",
              "bindToProps": {
                "children": {
                  "utility": "get",
                  "parameters": ["context", "name"]
                }
              }
            },
            {
              "type": "p",
              "children": {
                "utility": "get",
                "parameters": ["context", "description"]
              }
            }
          ]
        },
        {
          "type": "div",
          "class": "flex flex-col gap-4",
          "children": [
            {
              "type": "div",
              "class": "flex flex-col gap-4",
              "children": [
                {
                  "visibleIf": [{
                    "utility": "get",
                    "parameters": ["context", "github.stargazers"]
                  }],
                  "type": "div",
                  "children": [
                    {
                      "type": "a",
                      "children": {
                        "utility": "concat",
                        "parameters": ["Stars:", " ", {
                          "utility": "get",
                          "parameters": ["context", "github.stargazers"]
                        }]
                      }
                    }
                  ]
                },
                {
                  "visibleIf": [{
                    "utility": "get",
                    "parameters": ["context", "score.supplyChain"]
                  }],
                  "type": "div",
                  "children": [
                    {
                      "type": "a",
                      "children": {
                        "utility": "concat",
                        "parameters": ["Supplychain score:", " ", {
                          "utility": "toFixed",
                          "parameters": [
                            {
                              "utility": "get",
                              "parameters": [
                                "context",
                                "score.supplyChain"
                              ]
                            },
                            2
                          ]
                        }]
                      }
                    }
                  ]
                },
                {
                  "type": "div",
                  "children": [
                    {
                      "type": "h2",
                      "class": "text-xl",
                      "children": "Links"
                    },
                    {
                      "type": "ul",
                      "class": "flex flex-row gap-2",
                      "children": [
                        {
                          "visibleIf": [{
                            "utility": "get",
                            "parameters": ["context", "links.site"]
                          }],
                          "type": "li",
                          "children": [
                            {
                              "type": "a",
                              "children": "Site",
                              "attributes": {
                                "href": {
                                  "utility": "get",
                                  "parameters": ["context", "links.site"]
                                }
                              }
                            }
                          ]
                        },
                        {
                          "visibleIf": [{
                            "utility": "get",
                            "parameters": ["context", "match.github"]
                          }],
                          "type": "li",
                          "children": [
                            {
                              "type": "a",
                              "children": "GitHub",
                              "attributes": {
                                "href": {
                                  "utility": "get",
                                  "parameters": ["context", "match.github"]
                                }
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "__todo": "check against context.tags.length",
              "visibleIf": [{
                "utility": "get",
                "parameters": ["context", "tags"]
              }],
              "type": "div",
              "class": "flex flex-col gap-2",
              "children": [
                {
                  "type": "h2",
                  "class": "text-xl",
                  "children": "Tags"
                },
                {
                  "type": "SimpleTags",
                  "bindToProps": {
                    "tags": {
                      "utility": "get",
                      "parameters": ["context", "tags"]
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
