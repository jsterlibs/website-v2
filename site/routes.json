{
  "/": {
    "meta": {
      "title": "JSter – JavaScript Catalog",
      "description": "JSter catalogues JavaScript libraries per purpose"
    },
    "layout": "siteIndex",
    "dataSources": [
      {
        "id": "parentCategories",
        "operation": "parentCategories"
      }
    ]
  },
  "catalog": {
    "meta": {
      "title": "JSter – Catalog",
      "description": "JavaScript libraries per category"
    },
    "layout": "catalogIndex",
    "dataSources": [
      {
        "id": "parentCategories",
        "operation": "parentCategories"
      }
    ]
  },
  "category": {
    "expand": {
      "dataSources": [
        {
          "id": "libraries",
          "operation": "libraries"
        },
        {
          "id": "categories",
          "operation": "categories",
          "dependsOn": ["libraries"]
        }
      ],
      "matchBy": {
        "dataSource": "categories",
        "slug": "id"
      },
      "layout": "categoryPage",
      "meta": {
        "__title": "match.name",
        "__description": "match.description"
      }
    }
  },
  "tag": {
    "expand": {
      "dataSources": [
        {
          "id": "libraries",
          "operation": "libraries"
        },
        {
          "id": "tags",
          "operation": "tags",
          "dependsOn": ["libraries"]
        }
      ],
      "matchBy": {
        "dataSource": "tags",
        "slug": "id"
      },
      "layout": "categoryPage",
      "meta": {
        "__title": "match.name",
        "__description": "match.description"
      }
    }
  },
  "library": {
    "expand": {
      "dataSources": [
        {
          "id": "libraries",
          "operation": "libraries"
        }
      ],
      "matchBy": {
        "dataSource": "libraries",
        "slug": "id"
      },
      "layout": "libraryPage",
      "meta": {
        "__title": "match.name",
        "__description": "match.description"
      }
    }
  },
  "about": {
    "meta": {
      "title": "JSter – About",
      "description": "About JSter"
    },
    "layout": "aboutPage"
  },
  "blog": {
    "layout": "blogIndex",
    "meta": {
      "title": "JSter – Blog",
      "description": "News relevant to JavaScript"
    },
    "dataSources": [
      {
        "id": "blogPosts",
        "operation": "blogPosts"
      }
    ],
    "expand": {
      "dataSources": [
        {
          "id": "blogPosts",
          "operation": "blogPosts"
        }
      ],
      "matchBy": {
        "dataSource": "blogPosts",
        "slug": "id"
      },
      "layout": "blogPage",
      "meta": {
        "__title": "match.name",
        "__description": "match.description"
      }
    }
  }
}
