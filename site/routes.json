{
  "/": {
    "meta": {
      "title": "JSter – JavaScript Catalog",
      "description": "JSter catalogues JavaScript libraries per purpose"
    },
    "layout": "siteIndex",
    "dataSources": [
      {
        "operation": "getParentCategories",
        "parameters": [],
        "name": "parentCategories"
      }
    ]
  },
  "catalog": {
    "meta": {
      "title": "JSter – Catalog",
      "description": "JavaScript libraries per category"
    },
    "layout": "catalogIndex",
    "dataSources": [
      {
        "operation": "getParentCategories",
        "parameters": [],
        "name": "parentCategories"
      }
    ]
  },
  "about": {
    "meta": {
      "title": "JSter – About",
      "description": "About JSter"
    },
    "layout": "aboutPage"
  },
  "blog": {
    "layout": "blogIndex",
    "meta": {
      "title": "JSter – Blog",
      "description": "News relevant to JavaScript"
    },
    "dataSources": [
      {
        "operation": "getBlogPosts",
        "parameters": [],
        "name": "blogPosts"
      }
    ],
    "expand": {
      "matchBy": {
        "indexer": {
          "operation": "indexBlog",
          "parameters": []
        },
        "dataSources": [{
          "operation": "processBlogPost",
          "firstParameter": "blogPost",
          "parameters": [],
          "name": "document"
        }],
        "slug": "blogPost.id"
      },
      "layout": "blogPage",
      "meta": {
        "title": {
          "utility": "get",
          "parameters": ["context", "document.title"]
        },
        "description": {
          "utility": "get",
          "parameters": ["context", "document.description"]
        }
      }
    }
  },
  "atom.xml": {
    "layout": "rssPage",
    "type": "xml",
    "meta": {
      "title": "JSter",
      "description": "JSter blog"
    },
    "dataSources": [
      {
        "operation": "getBlogPosts",
        "parameters": [],
        "name": "blogPosts"
      }
    ]
  }
