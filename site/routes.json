{
  "/": {
    "meta": {
      "title": "JSter – JavaScript Catalog",
      "description": "JSter catalogues JavaScript libraries per purpose"
    },
    "layout": "siteIndex",
    "dataSources": [
      {
        "id": "parentCategories",
        "operation": "parentCategories"
      }
    ]
  },
  "about": {
    "meta": {
      "title": "JSter – About",
      "description": "About JSter"
    },
    "layout": "aboutPage"
  },
  "blog": {
    "layout": "blogIndex",
    "meta": {
      "title": "JSter – Blog",
      "description": "News relevant to JavaScript"
    },
    "dataSources": [
      {
        "id": "blogPosts",
        "operation": "blogPosts"
      }
    ],
    "expand": {
      "dataSources": [
        {
          "id": "blogPosts",
          "operation": "blogPosts"
        }
      ],
      "matchBy": {
        "dataSource": "blogPosts",
        "slug": "id"
      },
      "layout": "blogPage",
      "meta": {
        "__title": "match.name",
        "__description": "match.description"
      }
    }
  }
}
