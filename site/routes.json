{
  "/": {
    "meta": {
      "title": "JSter – JavaScript Catalog",
      "description": "JSter catalogues JavaScript libraries per purpose"
    },
    "layout": "siteIndex",
    "dataSources": ["parentCategories"]
  },
  "catalog": {
    "meta": {
      "title": "JSter – Catalog",
      "description": "JavaScript libraries per category"
    },
    "layout": "catalogIndex",
    "dataSources": ["parentCategories"]
  },
  "category": {
    "expand": {
      "matchBy": {
        "dataSource": "categories",
        "slug": "id"
      },
      "layout": "categoryPage",
      "meta": {
        "title": {
          "utility": "get",
          "parameters": ["match", "name"]
        },
        "description": {
          "utility": "get",
          "parameters": ["match", "description"]
        }
      }
    }
  },
  "tag": {
    "expand": {
      "matchBy": {
        "dataSource": "tags",
        "slug": "id"
      },
      "layout": "categoryPage",
      "meta": {
        "title": {
          "utility": "get",
          "parameters": ["match", "name"]
        },
        "description": {
          "utility": "get",
          "parameters": ["match", "description"]
        }
      }
    }
  },
  "library": {
    "expand": {
      "matchBy": {
        "dataSource": "libraries",
        "slug": "id"
      },
      "layout": "libraryPage",
      "meta": {
        "title": {
          "utility": "get",
          "parameters": ["match", "name"]
        },
        "description": {
          "utility": "get",
          "parameters": ["match", "description"]
        }
      }
    }
  },
  "about": {
    "meta": {
      "title": "JSter – About",
      "description": "About JSter"
    },
    "layout": "aboutPage"
  },
  "blog": {
    "layout": "blogIndex",
    "meta": {
      "title": "JSter – Blog",
      "description": "News relevant to JavaScript"
    },
    "dataSources": ["blogPosts"],
    "expand": {
      "matchBy": {
        "dataSource": "blogPosts",
        "slug": "id"
      },
      "layout": "blogPage",
      "meta": {
        "title": {
          "utility": "get",
          "parameters": ["match", "name"]
        },
        "description": {
          "utility": "get",
          "parameters": ["match", "description"]
        }
      }
    }
  },
  "atom.xml": {
    "layout": "rssPage",
    "type": "xml",
    "meta": {
      "title": "JSter",
      "description": "JSter blog"
    },
    "dataSources": ["blogPosts"]
  }
}
