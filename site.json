{
  "element": "stack",
  "class": "m-4",
  "props": {
    "direction": "row",
    "spacing": "4"
  },
  "attributes": {
    "x-state": "false"
  },
  "children": [
    {
      "element": "box",
      "class": "bg-blue-200 p-2",
      "children": [
        "Value:",
        {
          "element": "box",
          "as": "span",
          "attributes": {
            "x": "state"
          }
        }
      ]
    },
    {
      "element": "box",
      "as": "button",
      "class": "bg-yellow-200 p-2",
      "children": "Change value",
      "attributes": {
        "onclick": "setState(v => !v)"
      }
    }
  ]
}
