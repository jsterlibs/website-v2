{
  "allow": ["env", "read", "write", "net", "run"],
  "env": {
    "NO_COLOR": 1
  },
  "scripts": {
    "build": "gustwind -b",
    "start": "gustwind -d",
    "decompress:cache": "wget -c $CACHE_LOCATION -O - | tar -xz",
    "get-blogposts": {
      "cmd": "deno run --unstable scripts/get-blogposts.ts"
    },
    "watch:get-blogposts": {
      "cmd": "deno run --unstable scripts/get-blogposts.ts",
      "watch": true
    },
    "get-categories": {
      "cmd": "deno run --unstable scripts/get-categories.ts"
    },
    "watch:get-categories": {
      "cmd": "deno run --unstable scripts/get-categories.ts",
      "watch": true
    },
    "get-parent-categories": {
      "cmd": "deno run --unstable scripts/get-parent-categories.ts"
    },
    "watch:get-parent-categories": {
      "cmd": "deno run --unstable scripts/get-parent-categories.ts",
      "watch": true
    },
    "get-libraries": {
      "cmd": "deno run --unstable scripts/get-libraries.ts"
    },
    "watch:get-libraries": {
      "cmd": "deno run --unstable scripts/get-libraries.ts",
      "watch": true
    },
    "get-library": {
      "cmd": "deno run --unstable scripts/get-library.ts"
    },
    "watch:get-library": {
      "cmd": "deno run --unstable scripts/get-library.ts",
      "watch": true
    },
    "write-categories": {
      "cmd": "deno run --unstable scripts/write-categories.ts"
    },
    "watch:write-categories": {
      "cmd": "deno run --unstable scripts/write-categories.ts",
      "watch": true
    },
    "write-libraries": {
      "cmd": "deno run --unstable scripts/write-libraries.ts"
    },
    "watch:write-libraries": {
      "cmd": "deno run --unstable scripts/write-libraries.ts",
      "watch": true
    },
    "write-tags": {
      "cmd": "deno run --unstable scripts/write-tags.ts"
    }
  },
  "importMap": "import_map.json"
}
